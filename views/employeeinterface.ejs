<!DOCTYPE html>
<html>

<head>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script src="/javascripts/project.js"></script> 
  <script>
    $(document).ready(function () {

      $('.datepicker').datepicker();
    });

    $(document).ready(function () {
      $('select').formSelect();
    });
  </script>
  </head>

      <body>
       <form action="/employee/submit_employee_record" method="post" enctype="multipart/form-data">
       <div class="maincontainer">

      <div class="box">
  
        <div class="row">
          <div col s6 class="heading">

            Employee Register
          </div>
        </div>
        <div class="row">
          <div class="input-field col s4">
            <i class="material-icons prefix">account_circle</i>
            <input name="firstname" id="firstname" type="text" class="validate">
            <label for="firstname">First Name</label>
          </div>

          <div class="input-field col s4">
            <i class="material-icons prefix">account_circle</i>
            <input name="lastname" id="lastname" type="text" class="validate">
            <label for="lastname">Last Name</label>
          </div>
 

          <div class="input-field col s4">
            <i class="material-icons prefix">event</i>
            <input id="dob" name="dob" type="text" class="datepicker">
            <label for="dob">Birth Date</label>
          </div>

        </div><label>
              <input name="gender" type="radio" value="Male" checked />
              <span>Male</span>
            </label>
            <label>
              <input name="gender" type="radio" value="Female" />
              <span>Female</span>
            </label>
          </div>


        <div class="row">
          <div class="col s4" style="margin-top: 25px;">
            
            <div class="input-field col s4">
            <i class="material-icons prefix">phone</i>
            <input name="contactnumber" id="contactnumber" type="text" class="validate">
            <label for="contactnumber">Mobile Number</label>
          </div>
             <div class="input-field col s4">
            <i class="material-icons prefix">mail</i>
            <input name="emailaddress" id="emailaddress" type="email" class="validate">
            <label for="emailaddress">Email Address</label>
          </div>


        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">home</i>
            <input name="address" id="address" type="text" class="validate">
            <label for="address">Address</label>
          </div>

          </div>
          <div class="row">
          <div class="input-field col s6">
            <select name="state" id="state">
            <option value="" disabled selected>Choose your State</option>
            </select>
            <label>State</label>
            </div>
            <div class="input-field col s6">
            <select name="city" id="city">
            <option value="" disabled selected>Choose your city</option>

            </select>
            <label>City</label>
          </div>
        </div>


        <div class="row">
          <div class="col s12">
            <div class="file-field input-field">
              <div class="btn">
                <span>Upload Picture</span>
                <input type="file" name="picture">
              </div>
              <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col s6 btnstyle">
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
          </div>
          <div class="col s6 btnstyle">
            <button class="btn waves-effect waves-light" type="reset" name="action">reset
              <i class="material-icons right">clear</i>
            </button>
          </div>

        </div>
        <div class="row">
          <div class="cols">
            <%if(status==1){%>
              <h6>Record Submitted</h6>

              <%}else if(status==0) { %>
                <h6>Fail to submit record</h6>
                <%}%>

          </div>
          </div>
          </div>
          </div>



    <!--JavaScript at end of body for optimized loading-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
   </form>
   </body>

   </html>